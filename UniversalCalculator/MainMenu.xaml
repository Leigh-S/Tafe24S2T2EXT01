        <Button Content="Currency Converter" Margin="0,370,0,0" VerticalAlignment="Top" Height="100" Width="350" HorizontalAlignment="Center" FontSize="22" Click="Button_Click_2"/>
        <Button Content="Exit" Margin="0,480,0,0" VerticalAlignment="Top" Height="100" Width="350" HorizontalAlignment="Center" FontSize="22" Click="Button_Click_3"/>
        <Image HorizontalAlignment="Left" Height="175" Margin="981,35,0,0" VerticalAlignment="Top" Width="219" Source="/Assets/abacus.PNG"/>
